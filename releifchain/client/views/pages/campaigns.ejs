<% layout('layouts/layout') -%>
<h1 class="text-center mb-4">Campaigns</h1>
<div class="row">
  <% campaigns.forEach(campaign => { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= campaign.title %></h5>
          <p class="card-text"><%= campaign.description %></p>
          <p class="card-text"><strong>Goal:</strong> $<%= campaign.goal %></p>
          <p class="card-text"><strong>Raised:</strong> $<%= campaign.raised %></p>
          <a href="/campaigns/<%= campaign._id %>" class="btn btn-primary">View Details</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>